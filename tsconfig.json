{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "es2018",
    "noEmit": true,
    "lib": ["es6", "dom", "esnext.asynciterable", "es2018"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
